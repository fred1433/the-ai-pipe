<section class="py-24 bg-neutral-900/50">
  <div class="container mx-auto max-w-screen-xl px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Client Success Stories
      </h2>
      <p class="mt-4 text-lg text-neutral-300">
        Real feedback from businesses transformed by AI automation
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-neutral-800/50 rounded-xl p-8 border border-neutral-700 hover:border-indigo-500/50 transition-all duration-300">
          <!-- Stars -->
          <div class="flex space-x-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
