---
import Button from './Button.astro';

const {
  tagline = "Automate your processes with AI in 72h",
  subtitle = "We turn your manual operations into a competitive advantage. Free up your teams, reduce errors, and accelerate your growth.",
  cta = "Discover our solutions",
  ctaLink = "/solutions"
} = Astro.props;
---

<section class="relative overflow-hidden bg-neutral-900">
  <div class="absolute inset-0 bg-gradient-to-r from-primary to-accent bg-[size:200%_200%] animate-background-pan opacity-25"></div>
  <div class="relative z-10 mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-4xl font-extrabold text-transparent sm:text-6xl bg-clip-text bg-gradient-to-r from-neutral-100 to-neutral-300">
        {tagline}
      </h1>

      <p class="mx-auto mt-4 max-w-xl text-lg/relaxed text-neutral-200">
        {subtitle}
      </p>

      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href={ctaLink} variant="primary" class="w-full sm:w-auto">
          {cta}
        </Button>

        <Button href="/contact" variant="secondary" class="w-full sm:w-auto">
          Contact us
        </Button>
      </div>
    </div>
  </div>
</section> 